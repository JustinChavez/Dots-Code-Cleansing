function p_ = root(p_, varargin)% p_ = root(p_, varargin)%% Overloaded root method for class dXparadigm: %   basically a placeholder specifying that this class%   can only be added to the 'root' group (see rGroup, rAdd)%% Copyright 2006 by Joshua Gold at University of Pennsylvania% root(a, 'clear') means clean up%   otherwise initializeif isempty(varargin) || ~(ischar(varargin{1}) && strcmp(varargin{1}, 'clear'))        % Initialize with set method and given (optional) args    p_ = set(p_, varargin{:});end