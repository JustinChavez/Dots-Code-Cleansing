function [ps_, attributes_, batchMethods_] = dXpolygon(num_objects)% function [ps_, attributes_, batchMethods_] = dXpolygon(num_objects)%% Constructor method for class dXpolygon%% Arguments:%   num_objects   ... number of objects to create%% Output:%   ps_           ... array of created dXpolygon%   attributes_   ... default object attributes%   batchMethods_ ... methods that can be run in a batch (e.g., draw)% Copyright 2004 by Joshua I. Gold%   University of Pennsylvania% get screen attributes[wn, sr, ppd, fr] = rGraphicsGetScreenAttributes;% default object attributesattributes = { ...        % name			type		ranges(?)	default        'visible',          'boolean',	[],		false;	...        'pointList',        'array',	[],		[];		... % each row is x,y        'color',            'array',	[],		[255,0,0]; ...        'windowNumber',     'auto',     [],     wn;     ...        'screenRect',       'auto',     [],     sr;     ...        'sr',               'auto',     [],     sr(3:4)./2; ...        'pixelsPerDegree',  'auto',     [],     ppd;    ...        'frameRate',        'auto',     [],     fr;     ...        'pList',            'auto',		[],		[]; 	...        'tag',              'auto',	    [],		0};             % ignored% make an array of objects from structs made from the attributesp   = cell2struct(attributes(:,4), attributes(:,1), 1);for i = 1:num_objects    ps_(i) = class(p, 'dXpolygon');end% return the attributes, if necessaryif nargout > 1    attributes_ = attributes;endif nargout > 2    batchMethods_ = {'draw', 'blank'};end