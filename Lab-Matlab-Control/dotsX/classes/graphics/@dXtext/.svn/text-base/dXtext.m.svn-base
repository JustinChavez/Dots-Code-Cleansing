function [ts_, attributes_, batchMethods_] = dXtext(num_objects)% function [ts_, attributes_, batchMethods_] = dXtext(num_objects)%% Constructor method for class dXtext.%   Note that x,y position are in screen (pixel)%   coordinates, not deg visual angle re: center of screen,%   like dXtargets and dXdots. Just 'cuz.%% Input:%   num_objects    ... number of dXtext objects to create%% Output:%   ts_            ... array of created dXtext%   attributes_    ... default object attributes%   batchMethods_  ... methods that can be run in a batch (e.g., draw)% Copyright 2004 by Joshua I. Gold%   University of Pennsylvania% get screen attributes[wn, sr, ppd, fr] = rGraphicsGetScreenAttributes;if wn > 0    modeRange = Screen('TextModes');else    modeRange = {};end% default object attributesattributes = { ...        % name			type		ranges(?)	default        'string',           'string',   [],     '';     ...        'x',                'scalar',	[],		0;		...        'y',                'scalar',	[],		0;		...        'size',             'scalar',   [],     60;     ...        'font',             'string',   [],     'Arial';   ...        'bold',             'boolean',  [],     false;  ...        'italic',           'boolean',  [],     false;  ...        'underline',        'boolean',  [],     false;  ...        'outline',          'boolean',  [],     false;  ...        'color',            'array',    [],     [1 1 0]*255; ...        'mode',             'string',   modeRange, 'TextFill'; ...        'visible',          'boolean',	[],		false;	...        'windowNumber',     'auto',     [],     wn;     ...        'screenRect',       'auto',     [],     sr;     ...        'pixelsPerDegree',  'auto',     [],     ppd;    ...        'frameRate',        'auto',     [],     fr;     ...        'screen_x',         'auto',     [],     [];      ...        'screen_y',         'auto',     [],     [];      ...        'tag',              'auto',	    [],		0};         % ignored    % make an array of objects from structs made from the attributest = cell2struct(attributes(:,4), attributes(:,1), 1);for i = 1:num_objects    ts_(i) = class(t, 'dXtext');end% return the attributes, if necessaryif nargout > 1    attributes_ = attributes;endif nargout > 2    batchMethods_ = {'draw', 'blank'};end